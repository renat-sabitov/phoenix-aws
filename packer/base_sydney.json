{
  "variables": {
    "image_name": "",
    "version": "{{timestamp}}",
    "base_ami": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "ap-southeast-2",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "t1.micro",
    "ssh_username": "ec2-user",
    "ami_name": "{{user `image_name`}}_{{user `version`}}",
    "run_tags": {
      "User":"ci",
      "Billing": "SIRCA_Limited+Academic_Development:_ACA_2.0_Phase_2+baking+dev"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "sudo -E yum install ansible --enablerepo epel -y"
      ]
    },
    {
      "type": "ansible-local",
      "extra_arguments": [
        "-e sirca_role={{user `image_name`}}"
      ],
      "playbook_dir": "ansible",
      "playbook_file": "ansible/one_role.yml",
      "inventory_file": "ansible/local_inventory.yml"
    }
  ]
}
